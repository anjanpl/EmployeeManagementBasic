@model IEnumerable<Employee>

@{
    ViewBag.Title = "Supplier List";
}


<div class="card-deck">
    @foreach (var employee in Model)
    {
       
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
               Employee Name: <h4>@employee.Name</h4>              
               Email: <h4>@employee.Email</h4>               
               Department: <h4>@employee.Department</h4>
            </div>
            
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" 
                   asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-action="edit" asp-controller="home"
                   asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">Edit</a>
                
                <form method="post" asp-action = "delete" asp-controller="home" asp-route-id="@employee.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </div>
        </div>
    }
</div>